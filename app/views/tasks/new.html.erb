<p class="link_center click_to_add"><button class="ui button">Add New Task</button></p>
<div class="add_member">
<div class="ui form">
<%= form_for(@task , url: tasks_create_path , method: :post) do |p| %>
  <div class="field">
    <label>Name</label>
    <%= p.text_field :task_name , placeholder: "Enter member name"%>
  </div>

  <div class="field">
    <label>Description</label>
    <%= p.text_area :task_desc , placeholder: "Enter user email" , :required => true%>
  </div>


  <label>Select Time</label>
   
  <%= p.time_field  :dead_time , {ampm: true}%>
<br>
  <label>Select Day</label>
  <%= p.date_field :dead_day  %>
<br>
<% if current_user.parent_id == 0 %>
  <div class="field">
    <label>Assign_to</label>
    <%= p.select :member_id , @members.collect { |m| [m.email, m.id] } , :include_blank => true %>
  </div>
<% end %>

<%= p.submit "Create" , class:"ui button blue"%>
<% end %>

<br>
<%= link_to "Back" , :back %>
</div>
