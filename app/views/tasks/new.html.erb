<p class="link_center click_to_add "><strong>Add New Task</strong></p>
<div class="add_member">
<div class="ui form">
<%= form_for(@task , url: tasks_create_path , method: :post) do |p| %>
  <div class="field">
    <label>Name</label>
    <%= p.text_field :task_name , placeholder: "Enter member name"%>
  </div>

  <div class="field">
    <label>Description</label>
    <%= p.text_field :task_desc , placeholder: "Enter user email" , :required => true%>
  </div>


  <label>Dead Time</label>
   
  <%= p.time_select  :dead_time %>
<br>
  <label>Dead Day</label>
 
  <%= p.date_select :dead_day %>
<br>
<% if current_user.parent_id == 0 %>
  <div class="field">
    <label>Assign_to</label>
    <%= p.select :assign_to , @members.collect { |m| [m.email, m.id] } , :include_blank => true %>
  </div>
<% end %>
<%= p.submit "Create" , class:"ui button blue"%>
<% end %>

<br>
<%= link_to "Back" , :back %>
</div>
<hr>
</div>
</div>
