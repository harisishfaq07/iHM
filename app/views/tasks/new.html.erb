</div>


<script>

$(document).ready(function(){
    $(".add_member").hide();
    $("#today").hide();
    $(".click_to_add").click(function(){
        $(".add_member").slideToggle();
    })
   
    // Fetch Today Tasks thruogh Ajax call
    $(".today").click(function(){
      send_data = {type: "today"}
      $.ajax({
        type: 'POST',
        url: '/tasks/user_tasks',
        beforeSend: function(xhr) {xhr.setRequestHeader("X-CSRF-Token", $("meta[name='csrf-token']").attr("content"))},
        data: send_data,
        dataType: 'script',
        success: function(data) {
        console.log("okay")
        }
      });

    })


    // Fetch Schedule Tasks thruogh Ajax call
    $(".schedule").click(function(){
      send_data = {type: "schedule"}
      $.ajax({
        type: 'POST',
        url: '/tasks/user_tasks',
        beforeSend: function(xhr) {xhr.setRequestHeader("X-CSRF-Token", $("meta[name='csrf-token']").attr("content"))},
        data: send_data,
        dataType: 'script',
        success: function(data) {
        console.log("okay")
        }
      });

    })


    // Fetch previous Tasks thruogh Ajax call
    $(".previous").click(function(){
      send_data = {type: "previous"}
      $.ajax({
        type: 'POST',
        url: '/tasks/user_tasks',
        beforeSend: function(xhr) {xhr.setRequestHeader("X-CSRF-Token", $("meta[name='csrf-token']").attr("content"))},
        data: send_data,
        dataType: 'script',
        success: function(data) {
        console.log("okay")
        }
      });

    })
})
</script>

