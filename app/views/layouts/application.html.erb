<!DOCTYPE html>
<html>
  <head>
    <title>IHMProject</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag "https://js.stripe.com/v2/" %>
    <script language="Javascript">
        Stripe.setPublishableKey(<%= StripeAccount.last.p_key if StripeAccount.count > 0 %>);
    </script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="ui menu set inverted black">
  <a class=" item ">
   <span class = "redirect"> iHouseManagement <i class="home icon orange"></i></span>
  </a>
  
  <div class="right menu">
  <% if user_signed_in? && current_user.admin == 1 %>
  <a class=" item ">
  <span class="redirectadmin"><i class="home icon green"></i></span>
 </a>
 <% elsif user_signed_in? && current_user.admin == 0%>
 <a class=" item ">
 <span class="redirectuser"><i class="home icon green"></i></span>
</a>
<% end %>
   <% if !user_signed_in? %>
    <div class="item" >
      <i class="icon power off green"></i>  <%= link_to "Login" , new_user_session_path %>
    </div>
    <% else %>
    <div class="item" >
    <%= button_to "Job" , ihm_perform_job_path %>
    <i class="icon power off red"></i>  <%= button_to "Logout" , destroy_user_session_path , method: :delete , class: "logout"%>
    </div>
    <% end %>

  </div>
</div>
<% if notice.present? %>
<div class="ui positive message transition close">
<i class="close icon shut"></i>
<p class="notice"><%= notice %></p>
</div>
<%end%>
<% if alert.present? %>
<div class="ui negative message close">
<i class="close icon shut"></i>
<p class="alert"><%= alert %></p>
</div>
 <% end %>


 <script>
$(document).ready(function(){
  $(".shut").click(function(){
    $(".close").hide();
  })
})

 </script>




    <%= yield %>
  </body>
</html>

<script>
$(document).ready(function(){
  $(".redirect").click(function(){
    window.location.href = "http://localhost:3000";
  })
  $(".redirectadmin").click(function(){
    window.location.href = "http://localhost:3000/admin/dashboard";
  })
  $(".redirectuser").click(function(){
    window.location.href = "http://localhost:3000/ihm/dashboard";
  })
})

</script>