<div class="link_center"><strong>All Users</strong></div>
<table class="ui compact celled definition table">
  <thead>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Payment</th>
      <th>Approved</th>
      <th>Show</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @all_users.each do |p| %>
    <tr>
      <td class="collapsing">
      <%= p.id %>
      </td>
      <td><%=p.email%></td>
      <% if p.payment == 1 %>
          <td><i class="icon check green"></i></td>
      <% else %>
          <td><i class="icon x icon red"></i></td>
      <% end %>
      <% if p.status == 1 %>
          <td><i class="icon check green"></i></td>
      <% else %>
          <td><i class="icon x icon red"></i></td>
      <% end %>
      <td>
         <div class="inline"><%= link_to "Show" , user_view_user_path(id: p.id) %> 
      </td>
      <td>
         <%= button_to "Delete" , user_delete_user_path(id: p.id) , method: :delete %></div>
      </td>
    </tr>
    <% end %>
   <div class="digg_pagination">
    <%= will_paginate @all_users, :container => false %>

  </div>
  <div class="page_info">
  <%= page_entries_info @all_users %>
</div>

