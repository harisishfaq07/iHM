<div class="ui container">
<p class="link_center"><strong>Edit Package</strong></p>
<div class="ui form">
<%= form_for(@package , url: package_path , method: :put) do |p| %>
  <div class="field">
    <label>Name</label>
    <%= p.text_field :name , placeholder: "Enter package name"%>
  </div>
  <div class="field">
    <label>Contacts Allowed</label>
    <%= p.number_field :contacts_allowed , placeholder: "Enter no of contacts allowed"%>
  </div>
  <div class="field">
  <label>Price</label>
  <%= p.number_field :price , placeholder: "Enter no of contacts allowed"%>
</div>
<%= p.submit "Edit" , class:"ui button blue"%>
<% end %>

<br>
<%= link_to "Back" , :back %>
</div>

</div>